@model List<GamerLFG.Models.Product>
@{
    ViewData["Title"] = "รายการสินค้า";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>รายการสินค้า</h2>
        <span class="badge bg-secondary fs-6">ทั้งหมด @Model.Count รายการ</span>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">ยังไม่มีสินค้าในระบบ</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @* วนลูปแสดงแต่ละ product เป็น card *@
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-muted">@product.Description</p>
                        </div>
                        <div class="card-footer d-flex justify-content-between align-items-center">
                            <span class="badge bg-primary">@product.Category</span>
                            <strong class="text-success">฿@product.Price.ToString("N0")</strong>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
