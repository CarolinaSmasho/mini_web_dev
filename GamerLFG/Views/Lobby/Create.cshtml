@{
    ViewData["Title"] = "Establish Link";
}

<main class="flex-1 max-w-[800px] mx-auto w-full px-6 py-12">
    <div class="mb-10 text-center">
        <h1 class="text-4xl font-black text-white italic tracking-tighter uppercase mb-2">ESTABLISH SQUAD LINK</h1>
        <p class="text-white/40 font-bold uppercase tracking-widest text-sm">Configure your tactical recruitment parameters</p>
    </div>

    <form asp-action="Create" method="post" class="flex flex-col gap-8">
        @Html.AntiForgeryToken()
        
        <!-- Primary Config -->
        <section class="bg-card-dark border border-white/10 rounded-lg p-8 flex flex-col gap-6">
            <h2 class="text-lg font-bold text-primary uppercase tracking-widest flex items-center gap-3">
                <span class="size-2 bg-primary rounded-full animate-pulse"></span>
                CORE PARAMETERS
            </h2>

            <div class="flex flex-col gap-2">
                <label class="text-[10px] font-black text-white/50 uppercase tracking-widest ml-1" for="title">Transmission Title</label>
                <input type="text" id="title" name="title" required 
                       class="bg-black border border-white/10 rounded px-4 py-3 text-white placeholder:text-white/20 focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all"
                       placeholder="e.g., RANKED GRIND TO ASCENDANT" />
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="flex flex-col gap-2">
                    <label class="text-[10px] font-black text-white/50 uppercase tracking-widest ml-1" for="game">Target Game</label>
                    <select id="game" name="game" required
                            class="bg-black border border-white/10 rounded px-4 py-3 text-white focus:border-primary outline-none transition-all appearance-none cursor-pointer">
                        <option value="Valorant">VALORANT</option>
                        <option value="Elden Ring">ELDEN RING</option>
                        <option value="Apex Legends">APEX LEGENDS</option>
                        <option value="Minecraft">MINECRAFT</option>
                        <option value="Other">OTHER PROTOCOL</option>
                    </select>
                </div>
                <div class="flex flex-col gap-2">
                    <label class="text-[10px] font-black text-white/50 uppercase tracking-widest ml-1" for="maxPlayers">Squad Size</label>
                    <input type="number" id="maxPlayers" name="maxPlayers" min="2" max="20" value="5" required
                           class="bg-black border border-white/10 rounded px-4 py-3 text-white focus:border-primary outline-none transition-all" />
                </div>
            </div>

            <div class="flex flex-col gap-2">
                <label class="text-[10px] font-black text-white/50 uppercase tracking-widest ml-1" for="description">Mission Objectives</label>
                <textarea id="description" name="description" rows="4"
                          class="bg-black border border-white/10 rounded px-4 py-3 text-white placeholder:text-white/20 focus:border-primary outline-none transition-all resize-none"
                          placeholder="Detail your requirements, strats, and mission goals..."></textarea>
            </div>
        </section>

        <!-- Tactical Tags -->
        <section class="bg-card-dark border border-white/10 rounded-lg p-8">
            <h2 class="text-lg font-bold text-primary uppercase tracking-widest flex items-center gap-3 mb-6">
                <span class="size-2 bg-primary rounded-full"></span>
                TACTICAL TAGS
            </h2>
            
            <div class="flex flex-wrap gap-3">
                @foreach (var mood in new[] { "TRYHARD", "CHILL", "COMPETITIVE", "CASUAL", "MIC REQ", "18+", "NO TOXIC" })
                {
                    <label class="relative cursor-pointer group">
                        <input type="checkbox" name="moods" value="@mood" class="peer sr-only" />
                        <span class="px-4 py-2 bg-white/5 border border-white/10 rounded text-[10px] font-bold text-white/40 uppercase tracking-widest transition-all group-hover:bg-white/10 peer-checked:bg-primary/10 peer-checked:border-primary peer-checked:text-primary">
                            @mood
                        </span>
                    </label>
                }
            </div>
        </section>

        <!-- Personnel Requirements -->
        <section class="bg-card-dark border border-white/10 rounded-lg p-8">
            <h2 class="text-lg font-bold text-primary uppercase tracking-widest flex items-center gap-3 mb-6">
                <span class="size-2 bg-primary rounded-full"></span>
                PERSONNEL REQUIREMENTS
            </h2>

            <div id="rolesContainer" class="flex flex-col gap-4">
                <div class="grid grid-cols-1 md:grid-cols-12 gap-4 items-end">
                    <div class="md:col-span-8 flex flex-col gap-2">
                        <label class="text-[10px] font-black text-white/50 uppercase tracking-widest ml-1">Role Designation</label>
                        <input type="text" name="roleNames[]" class="bg-black border border-white/10 rounded px-4 py-2 text-white placeholder:text-white/20 focus:border-primary outline-none" placeholder="e.g., IGL, ENTRY, TANK" />
                    </div>
                    <div class="md:col-span-3 flex flex-col gap-2">
                        <label class="text-[10px] font-black text-white/50 uppercase tracking-widest ml-1">Count</label>
                        <input type="number" name="roleCounts[]" value="1" min="1" class="bg-black border border-white/10 rounded px-4 py-2 text-white focus:border-primary outline-none" />
                    </div>
                    <div class="md:col-span-1">
                        <button type="button" onclick="this.parentElement.parentElement.remove()" class="size-10 flex items-center justify-center bg-white/5 hover:bg-red-500/20 text-white/20 hover:text-red-500 border border-white/10 rounded transition-all">
                            <span class="material-symbols-outlined text-xl">close</span>
                        </button>
                    </div>
                </div>
            </div>

            <button type="button" onclick="addRole()" class="mt-6 w-full py-3 bg-white/5 hover:bg-white/10 border border-white/10 rounded text-[10px] font-bold text-white uppercase tracking-widest transition-all flex items-center justify-center gap-2">
                <span class="material-symbols-outlined text-lg">add</span>
                ADD ROLE REQUIREMENT
            </button>
        </section>

        <!-- Actions -->
        <div class="flex flex-col md:flex-row gap-4">
            <a asp-action="Index" class="flex-1 h-14 bg-white/5 hover:bg-white/10 border border-white/10 rounded flex items-center justify-center text-xs font-bold text-white uppercase tracking-widest transition-all">
                ABORT TRANSMISSION
            </a>
            <button type="submit" class="flex-[2] h-14 bg-primary hover:bg-primary/90 rounded flex items-center justify-center text-sm font-black text-black uppercase tracking-[0.2em] shadow-[0_0_30px_rgba(242,150,13,0.3)] transition-all active:scale-[0.98]">
                ESTABLISH LINK <span class="material-symbols-outlined ml-2">rocket_launch</span>
            </button>
        </div>
    </form>
</main>

@section Scripts {
    <script>
        function addRole() {
            const container = document.getElementById('rolesContainer');
            const div = document.createElement('div');
            div.className = 'grid grid-cols-1 md:grid-cols-12 gap-4 items-end';
            div.innerHTML = `
                <div class="md:col-span-8 flex flex-col gap-2">
                    <label class="text-[10px] font-black text-white/50 uppercase tracking-widest ml-1">Role Designation</label>
                    <input type="text" name="roleNames[]" class="bg-black border border-white/10 rounded px-4 py-2 text-white placeholder:text-white/20 focus:border-primary outline-none" placeholder="e.g., IGL, ENTRY, TANK" />
                </div>
                <div class="md:col-span-3 flex flex-col gap-2">
                    <label class="text-[10px] font-black text-white/50 uppercase tracking-widest ml-1">Count</label>
                    <input type="number" name="roleCounts[]" value="1" min="1" class="bg-black border border-white/10 rounded px-4 py-2 text-white focus:border-primary outline-none" />
                </div>
                <div class="md:col-span-1">
                    <button type="button" onclick="this.parentElement.parentElement.remove()" class="size-10 flex items-center justify-center bg-white/5 hover:bg-red-500/20 text-white/20 hover:text-red-500 border border-white/10 rounded transition-all">
                        <span class="material-symbols-outlined text-xl">close</span>
                    </button>
                </div>
            `;
            container.appendChild(div);
        }
    </script>
}
