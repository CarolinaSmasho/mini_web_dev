<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GamerLFG</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GamerLFG.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GamerLFG</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                               asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Friends"
                               asp-action="Friends_list">Friends</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - GamerLFG - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


    <input type="checkbox" id="global-user-modal-toggle" class="modal-checkbox">

    <div class="modal-overlay">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title-box">
                    <span id="modal-display-name" class="modal-title">Loading...</span>
                </div>
                <label for="global-user-modal-toggle" class="modal-close-btn">X</label>
            </div>

            <div class="modal-body" style="color: white; padding: 10px;">
                <p><strong>Username:</strong> <span id="modal-username">-</span></p>
                <p><strong>Status:</strong> <span id="modal-status">-</span></p>
                <p><strong>Bio:</strong> <span id="modal-bio">-</span></p>
            </div>

            <div class="modal-actions">
                <a id="modal-profile-link" href="#" class="modal-action-btn">ดู Profile</a>
                <button class="modal-action-btn" onclick="alert('Mock: Add Friend')">Add/Delete Friend</button>
            </div>
        </div>
    </div>

    <script>
                    function openUserModal(userId) {
                        // 1. ตั้งค่า Default ระหว่างรอโหลด
                        document.getElementById('modal-display-name').innerText = "Loading...";
                        document.getElementById('modal-username').innerText = "...";

                            // 2. Ajax (Fetch) ไปขอข้อมูลจาก Controller
                        fetch(`/Home/GetUserDetails?id=${userId}`)
                            .then(response => {
                                if (!response.ok) throw new Error("User not found");
                                return response.json();
                            })
                            .then(data => {
                                // 3. เอาข้อมูลที่ได้มาหยอดใส่ Modal
                                document.getElementById('modal-display-name').innerText = data.displayName;
                                document.getElementById('modal-username').innerText = data.username;
                                document.getElementById('modal-status').innerText = data.status;
                                document.getElementById('modal-bio').innerText = data.bio;

                                // อัปเดตลิ้งก์ปุ่ม
                                document.getElementById('modal-profile-link').href = `/users/${data.id}/profile`;

                                // 4. สั่งเปิด Modal
                                document.getElementById('global-user-modal-toggle').checked = true;
                            })
                            .catch(err => {
                                console.error(err);
                                alert("ไม่พบข้อมูลผู้ใช้นี้ (Mock Data อาจจะไม่ครบ)");
                            });
                    }
    </script>

</body>








</html>