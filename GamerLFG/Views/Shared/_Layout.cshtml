<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GamerLFG</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GamerLFG.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true">
    <script src="~/js/nav-control.js" asp-append-version="true" defer></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>

    <header class="header">
        <div class="nav-bar">

            <div style="display: flex;">
                <h1 style="color: #ffffff;">Gamer</h1>
                <h1 style="padding-left: 0%;background-color:#ffa431">Hub</h1>
            </div>
            
            <div class="landscape-menu">
                <button class="orange-button">Notics</button>
                <button class="orange-button">Create Lobby</button>
                <button class="orange-button" style="border-radius: 2rem;height:fit-content"><i class="fa fa-user-circle fa-2x"></i></button>
            </div>

            <div class="hamburger-icon" onclick="toggleMenu()" id='hamburger-icon'>
                <span>&#9776;</span>
            </div>

            <div id="mobile-menu" class="nav-mobile-hidden">
                <button class="orange-button">Log In(hidden)</button>
                <button class="orange-button">Profile</button>
                <button class="orange-button">Notics</button>
                <button class="orange-button">Create Lobby</button>
            </div>
            
        </div> 

    </header>
   
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - GamerLFG - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
