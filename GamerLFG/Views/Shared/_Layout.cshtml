<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gamer LFG</title>
    
    <!-- Google Fonts - Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.min.js"></script>
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-container">
            <!-- Logo -->
            <a href="/" class="logo">
                <i data-lucide="gamepad-2" class="logo-icon"></i>
                <span class="logo-text">GAMER LFG</span>
            </a>
            
            <!-- Navigation -->
            <nav class="nav-links">
                @{
                    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
                    var action = ViewContext.RouteData.Values["action"]?.ToString();
                }
                <a asp-controller="Home" asp-action="Index" class="nav-link @(controller == "Home" ? "active" : "")">
                    <i data-lucide="home"></i>
                    Home
                </a>
                <a asp-controller="Lobby" asp-action="Index" class="nav-link @(controller == "Lobby" && action == "Index" ? "active" : "")">
                    <i data-lucide="users"></i>
                    Browse Lobbies
                </a>
                <a asp-controller="Lobby" asp-action="Create" class="nav-link @(controller == "Lobby" && action == "Create" ? "active" : "")">
                    <i data-lucide="plus-circle"></i>
                    Create Lobby
                </a>
            </nav>
            
            <!-- User Section -->
            <div class="user-section">
                @if (Context.Session.GetString("UserId") != null)
                {
                    <button class="icon-btn" title="Notifications">
                        <i data-lucide="bell"></i>
                    </button>
                    <div class="user-dropdown">
                        <div class="user-avatar" id="userAvatarBtn">
                            <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=@Context.Session.GetString("Username")" alt="Avatar" />
                            <span class="user-name">@Context.Session.GetString("Username")</span>
                            <i data-lucide="chevron-down"></i>
                        </div>
                        <div class="user-dropdown-menu" id="userDropdownMenu">
                            <a asp-controller="User" asp-action="Profile" class="dropdown-item">
                                <i data-lucide="user"></i>
                                Profile
                            </a>
                            <a asp-controller="User" asp-action="Friends" class="dropdown-item">
                                <i data-lucide="users"></i>
                                Friends
                            </a>
                            <a asp-controller="User" asp-action="Settings" class="dropdown-item">
                                <i data-lucide="settings"></i>
                                Settings
                            </a>
                            <div class="dropdown-divider"></div>
                            <a asp-controller="Auth" asp-action="Logout" class="dropdown-item text-danger">
                                <i data-lucide="log-out"></i>
                                Logout
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-secondary">Login</a>
                    <a asp-controller="Auth" asp-action="Register" class="btn btn-primary">Sign Up</a>
                }
            </div>
            
            <!-- Mobile Menu Toggle -->
            <button class="mobile-menu-toggle" id="mobileMenuToggle">
                <i data-lucide="menu"></i>
            </button>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-left">
                <p>&copy; 2026 Gamer LFG - Find Your Squad</p>
            </div>
            <div class="footer-center">
                <a href="#" class="footer-link">About</a>
                <a href="#" class="footer-link">Privacy</a>
                <a href="#" class="footer-link">Terms</a>
                <a href="#" class="footer-link">Help</a>
            </div>
            <div class="footer-right">
                <a href="#" class="social-icon" title="Discord">
                    <i data-lucide="message-circle"></i>
                </a>
                <a href="#" class="social-icon" title="Twitter">
                    <i data-lucide="twitter"></i>
                </a>
                <a href="#" class="social-icon" title="Steam">
                    <i data-lucide="gamepad"></i>
                </a>
            </div>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Initialize Lucide icons
        lucide.createIcons();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
