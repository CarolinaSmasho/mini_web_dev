@{
    ViewData["Title"] = "System Access";
}

<div class="relative min-h-[calc(100vh-80px)] flex flex-col items-center justify-center overflow-hidden">
    <!-- Grid Background -->
    <div class="absolute inset-0 pointer-events-none opacity-[0.03]" style="background-image: radial-gradient(circle, #f2960d 1px, transparent 1px); background-size: 40px 40px;"></div>
    
    <!-- Scanline Effect -->
    <div class="absolute top-0 w-full h-24 pointer-events-none opacity-10" style="background: linear-gradient(0deg, rgba(0, 0, 0, 0) 0%, rgba(242, 150, 13, 0.2) 50%, rgba(0, 0, 0, 0) 100%); animation: scanline 4s linear infinite;"></div>

    <main class="relative z-10 w-full max-w-md px-4 py-12">
        <div class="bg-[#0f0f0f] border border-white/5 p-8 rounded-lg shadow-2xl relative">
            <!-- Decorative Corners -->
            <div class="absolute top-0 left-0 w-4 h-4 border-t-2 border-l-2 border-primary rounded-tl"></div>
            <div class="absolute bottom-0 right-0 w-4 h-4 border-b-2 border-r-2 border-primary rounded-br"></div>
            
            <div class="mb-8 text-center">
                <h2 class="text-2xl font-bold tracking-widest text-white uppercase font-display">System Access</h2>
                <p class="text-xs text-primary/60 mt-1 font-medium tracking-[0.1em]">ESTABLISHING ENCRYPTED LINK...</p>
            </div>

            <form asp-controller="Auth" asp-action="Login" method="post" class="space-y-6">
                @Html.AntiForgeryToken()
                <div class="space-y-2">
                    <label class="block text-[10px] font-bold text-primary/80 uppercase tracking-widest ml-1">
                        Operator Identity
                    </label>
                    <div class="relative group">
                        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-primary/40 text-sm group-focus-within:text-primary transition-colors">person</span>
                        <input name="email" class="w-full bg-black/50 border border-white/10 rounded px-10 py-4 text-sm font-medium tracking-wider placeholder:text-white/20 focus:outline-none focus:ring-1 focus:ring-primary focus:border-primary transition-all uppercase" placeholder="ENTER EMAIL" type="email" required />
                    </div>
                </div>

                <div class="space-y-2">
                    <div class="flex justify-between items-center px-1">
                        <label class="block text-[10px] font-bold text-primary/80 uppercase tracking-widest">
                            Secure Passcode
                        </label>
                        <a class="text-[10px] text-white/40 hover:text-primary transition-colors uppercase tracking-widest" href="#">Forgot?</a>
                    </div>
                    <div class="relative group">
                        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-primary/40 text-sm group-focus-within:text-primary transition-colors">lock</span>
                        <input name="password" class="w-full bg-black/50 border border-white/10 rounded px-10 py-4 text-sm font-medium tracking-wider placeholder:text-white/20 focus:outline-none focus:ring-1 focus:ring-primary focus:border-primary transition-all uppercase" placeholder="••••••••" type="password" required />
                    </div>
                </div>

                <div class="flex items-center gap-2 px-1">
                    <input type="checkbox" name="rememberMe" id="rememberMe" class="rounded border-white/10 bg-black/50 text-primary focus:ring-primary focus:ring-offset-black" />
                    <label for="rememberMe" class="text-[10px] font-bold text-white/40 uppercase tracking-widest cursor-pointer hover:text-white/60">Maintain Session</label>
                </div>

                <button class="w-full bg-primary text-black font-bold py-4 rounded-lg hover:bg-white hover:text-black transition-all duration-300 shadow-[0_0_20px_rgba(242,150,13,0.3)] flex items-center justify-center gap-2 group tracking-[0.2em]" type="submit">
                    SIGN IN
                    <span class="material-symbols-outlined text-base group-hover:translate-x-1 transition-transform">arrow_forward</span>
                </button>
            </form>
        </div>

        <div class="mt-8 text-center space-y-4">
            <p class="text-xs text-white/40 tracking-widest">
                NEW TO THE SECTOR? 
                <a asp-controller="Auth" asp-action="Register" class="text-primary font-bold hover:underline underline-offset-4 ml-1">JOIN THE HUB</a>
            </p>
            <div class="flex justify-center gap-6">
                <div class="flex items-center gap-1 text-[9px] text-white/20 uppercase tracking-[0.2em]">
                    <span class="material-symbols-outlined text-[10px]">verified_user</span>
                    Encrypted
                </div>
                <div class="flex items-center gap-1 text-[9px] text-white/20 uppercase tracking-[0.2em]">
                    <span class="material-symbols-outlined text-[10px]">dns</span>
                    Node 04
                </div>
            </div>
        </div>
    </main>
</div>

<style>
    @@keyframes scanline {
        0% { transform: translateY(-100%); }
        100% { transform: translateY(1000%); }
    }
</style>
