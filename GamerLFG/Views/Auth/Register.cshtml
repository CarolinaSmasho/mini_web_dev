@{
    ViewData["Title"] = "Join the Hub";
}

<div class="relative min-h-[calc(100vh-80px)] w-full flex flex-col overflow-x-hidden">
    <!-- Grid Background -->
    <div class="absolute inset-0 pointer-events-none opacity-[0.05]" style="background-image: radial-gradient(#f2960d 1px, transparent 1px); background-size: 30px 30px;"></div>

    <main class="flex-1 flex flex-col items-center justify-center px-4 py-12 relative z-10">
        <div class="max-w-[1100px] w-full grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div class="flex flex-col justify-center space-y-8 lg:pr-10">
                <div class="space-y-4">
                    <span class="inline-block px-3 py-1 rounded-full bg-primary/20 text-primary text-xs font-bold tracking-widest uppercase">The Hub Access</span>
                    <h1 class="text-4xl md:text-6xl font-bold leading-none tracking-tight font-display">JOIN THE <span class="text-primary">ELITE</span> SQUAD</h1>
                    <p class="text-[#cbb390] text-lg max-w-md">Find your perfect teammates, sync your roles, and dominate the lobby. Registration is free and fast.</p>
                </div>
                
                <div class="space-y-6">
                    <div class="flex gap-4 items-start">
                        <div class="bg-accent-dark p-3 rounded-lg border border-white/5">
                            <span class="material-symbols-outlined text-primary">groups</span>
                        </div>
                        <div>
                            <h3 class="font-bold text-lg">Smart Matchmaking</h3>
                            <p class="text-sm text-[#cbb390]/70">Find players based on playstyle and role compatibility.</p>
                        </div>
                    </div>
                    <div class="flex gap-4 items-start">
                        <div class="bg-accent-dark p-3 rounded-lg border border-white/5">
                            <span class="material-symbols-outlined text-primary">verified_user</span>
                        </div>
                        <div>
                            <h3 class="font-bold text-lg">Verified Stats</h3>
                            <p class="text-sm text-[#cbb390]/70">Connect your accounts to showcase your true rank.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-card-dark rounded-xl border border-white/10 shadow-2xl p-6 md:p-8">
                <div class="flex flex-col gap-3 mb-8">
                    <div class="flex gap-6 justify-between items-end">
                        <p class="text-white text-base font-bold leading-normal uppercase tracking-wider">Authentication Protocol</p>
                        <p class="text-primary text-sm font-bold leading-normal">INITIALIZING...</p>
                    </div>
                    <div class="h-1.5 w-full rounded-full bg-white/5 overflow-hidden">
                        <div class="h-full bg-primary" style="width: 45%;"></div>
                    </div>
                </div>

                <form asp-controller="Auth" asp-action="Register" method="post" class="space-y-4" id="registerForm">
                    @Html.AntiForgeryToken()
                    <div class="space-y-4">
                        <div class="space-y-1">
                            <label class="block text-[#cbb390] text-[10px] font-bold uppercase tracking-widest ml-1">Codename</label>
                            <div class="relative">
                                <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-primary/40 text-sm">person</span>
                                <input name="username" class="w-full rounded-lg border border-white/10 bg-black/50 focus:border-primary focus:ring-1 focus:ring-primary text-white h-12 px-10 text-base transition-all" placeholder="YOUR GAMERTAG" type="text" required />
                            </div>
                        </div>

                        <div class="space-y-1">
                            <label class="block text-[#cbb390] text-[10px] font-bold uppercase tracking-widest ml-1">Comms (Email)</label>
                            <div class="relative">
                                <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-primary/40 text-sm">mail</span>
                                <input name="email" class="w-full rounded-lg border border-white/10 bg-black/50 focus:border-primary focus:ring-1 focus:ring-primary text-white h-12 px-10 text-base transition-all" placeholder="YOUR@EMAIL.COM" type="email" required />
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="space-y-1">
                                <label class="block text-[#cbb390] text-[10px] font-bold uppercase tracking-widest ml-1">Secure Pass</label>
                                <div class="relative">
                                    <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-primary/40 text-sm">lock</span>
                                    <input id="password" name="password" class="w-full rounded-lg border border-white/10 bg-black/50 focus:border-primary focus:ring-1 focus:ring-primary text-white h-12 px-10 text-base transition-all" placeholder="••••••••" type="password" required minlength="8" />
                                </div>
                            </div>
                            <div class="space-y-1">
                                <label class="block text-[#cbb390] text-[10px] font-bold uppercase tracking-widest ml-1">Confirm Pass</label>
                                <div class="relative">
                                    <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-primary/40 text-sm">verified</span>
                                    <input id="confirmPassword" name="confirmPassword" class="w-full rounded-lg border border-white/10 bg-black/50 focus:border-primary focus:ring-1 focus:ring-primary text-white h-12 px-10 text-base transition-all" placeholder="••••••••" type="password" required />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="pt-6 space-y-4">
                        <button class="w-full flex items-center justify-center gap-2 rounded-lg h-14 bg-primary text-black text-lg font-black uppercase tracking-tighter hover:scale-[1.02] active:scale-[0.98] transition-all shadow-[0_4px_20px_rgba(242,150,13,0.3)]" type="submit">
                            ESTABLISH ACCESS
                            <span class="material-symbols-outlined">rocket_launch</span>
                        </button>
                        <p class="text-center text-[10px] text-[#cbb390]/50 uppercase tracking-widest leading-relaxed">
                            Already part of the squad? 
                            <a asp-controller="Auth" asp-action="Login" class="text-primary font-bold hover:underline">LOGIN HERE</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>

@section Scripts {
    <script>
        document.getElementById('registerForm').addEventListener('submit', function(e) {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            if (password !== confirmPassword) {
                e.preventDefault();
                alert('Passwords do not match!');
            }
        });
    </script>
}
