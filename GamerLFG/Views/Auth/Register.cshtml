@{
    ViewData["Title"] = "Sign Up";
}

<div class="auth-page">
    <div class="auth-card">
        <div class="auth-header">
            <i data-lucide="user-plus" class="auth-icon"></i>
            <h1>Join the Squad</h1>
            <p>Create your account to start finding teammates</p>
        </div>
        
        <form asp-controller="Auth" asp-action="Register" method="post" class="auth-form" id="registerForm">
            @Html.AntiForgeryToken()
            
            <div class="form-group">
                <label class="form-label" for="username">Username</label>
                <input type="text" id="username" name="username" class="form-input" placeholder="YourGamerTag" required />
            </div>
            
            <div class="form-group">
                <label class="form-label" for="email">Email</label>
                <input type="email" id="email" name="email" class="form-input" placeholder="your@email.com" required />
            </div>
            
            <div class="form-group">
                <label class="form-label" for="password">Password</label>
                <input type="password" id="password" name="password" class="form-input" placeholder="••••••••" required minlength="8" />
                <small class="form-hint">At least 8 characters</small>
            </div>
            
            <div class="form-group">
                <label class="form-label" for="confirmPassword">Confirm Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-input" placeholder="••••••••" required />
            </div>
            
            <div class="form-options">
                <label class="checkbox-label">
                    <input type="checkbox" name="agreeTerms" required />
                    <span>I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a></span>
                </label>
            </div>
            
            <button type="submit" class="btn btn-primary btn-full">
                <i data-lucide="rocket"></i>
                Create Account
            </button>
            
            <div class="auth-divider">
                <span>or sign up with</span>
            </div>
            
            <div class="social-login">
                <button type="button" class="btn btn-social">
                    <i data-lucide="chrome"></i>
                    Google
                </button>
                <button type="button" class="btn btn-social">
                    <i data-lucide="message-circle"></i>
                    Discord
                </button>
            </div>
        </form>
        
        <div class="auth-footer">
            <p>Already have an account? <a asp-controller="Auth" asp-action="Login">Log in</a></p>
        </div>
    </div>
</div>

<style>
.auth-page {
    min-height: calc(100vh - var(--header-height) - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-xl) 0;
}

.auth-card {
    width: 100%;
    max-width: 420px;
    background: var(--glass-bg);
    backdrop-filter: blur(var(--glass-blur));
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
}

.auth-header {
    text-align: center;
    margin-bottom: var(--spacing-xl);
}

.auth-icon {
    width: 48px;
    height: 48px;
    color: var(--color-primary-orange);
    margin-bottom: var(--spacing-md);
}

.auth-header h1 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: var(--spacing-xs);
}

.auth-header p {
    color: var(--color-smoke-gray);
}

.auth-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
}

.form-hint {
    display: block;
    margin-top: var(--spacing-xs);
    color: var(--color-smoke-gray);
    font-size: 0.75rem;
}

.form-options {
    font-size: 0.875rem;
}

.checkbox-label {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-sm);
    color: var(--color-smoke-gray);
    cursor: pointer;
}

.checkbox-label input {
    margin-top: 4px;
    accent-color: var(--color-primary-orange);
}

.checkbox-label a {
    color: var(--color-electric-blue);
}

.btn-full {
    width: 100%;
    padding: var(--spacing-md);
}

.auth-divider {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    color: var(--color-smoke-gray);
    font-size: 0.875rem;
}

.auth-divider::before,
.auth-divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: var(--glass-border);
}

.social-login {
    display: flex;
    gap: var(--spacing-sm);
}

.btn-social {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm) var(--spacing-md);
    background: var(--color-midnight);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-md);
    color: var(--color-ghost-white);
    font-weight: 500;
    cursor: pointer;
    transition: all var(--transition-fast);
}

.btn-social:hover {
    background: var(--color-midnight-light);
    border-color: var(--color-primary-orange);
}

.btn-social i {
    width: 18px;
    height: 18px;
}

.auth-footer {
    text-align: center;
    margin-top: var(--spacing-lg);
    padding-top: var(--spacing-lg);
    border-top: 1px solid var(--glass-border);
    color: var(--color-smoke-gray);
}

.auth-footer a {
    color: var(--color-primary-orange);
    font-weight: 600;
}
</style>

@section Scripts {
    <script>
        lucide.createIcons();
        
        // Password confirmation validation
        document.getElementById('registerForm').addEventListener('submit', function(e) {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            if (password !== confirmPassword) {
                e.preventDefault();
                alert('Passwords do not match!');
            }
        });
    </script>
}
