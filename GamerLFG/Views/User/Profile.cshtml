@{
    ViewData["Title"] = "My Profile";
}

<div class="profile-page">
    <!-- Profile Header -->
    <div class="profile-header card">
        <div class="profile-avatar-container">
            <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=Notatord" alt="Your Avatar" class="profile-avatar" />
            <button class="btn btn-secondary avatar-edit-btn">
                <i data-lucide="camera"></i>
            </button>
        </div>
        
        <div class="profile-info">
            <h1 class="profile-username">Notatord</h1>
            <p class="profile-tagline">Ready to dominate! üéÆ</p>
            <div class="profile-stats">
                <div class="stat">
                    <span class="stat-value">47</span>
                    <span class="stat-label">Lobbies Joined</span>
                </div>
                <div class="stat">
                    <span class="stat-value">12</span>
                    <span class="stat-label">Lobbies Hosted</span>
                </div>
                <div class="stat karma-stat">
                    <span class="stat-value">
                        <i data-lucide="star"></i> 4.8
                    </span>
                    <span class="stat-label">Karma Score</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Profile Form -->
    <form class="profile-form card" id="profileForm">
        <h2><i data-lucide="user"></i> Edit Profile</h2>
        
        <div class="form-group">
            <label class="form-label" for="username">Username</label>
            <input type="text" id="username" name="username" class="form-input" value="Notatord" />
        </div>
        
        <div class="form-group">
            <label class="form-label" for="email">Email</label>
            <input type="email" id="email" name="email" class="form-input" value="notatord@email.com" />
        </div>
        
        <div class="form-group">
            <label class="form-label" for="tagline">Tagline</label>
            <input type="text" id="tagline" name="tagline" class="form-input" value="Ready to dominate! üéÆ" placeholder="Your personal tagline" maxlength="50" />
        </div>
        
        <div class="form-group">
            <label class="form-label" for="bio">Bio</label>
            <textarea id="bio" name="bio" class="form-input" rows="3" placeholder="Tell others about yourself...">Competitive gamer who loves team play. Always looking for skilled teammates!</textarea>
        </div>
        
        <h3>Preferences</h3>
        
        <div class="form-group">
            <label class="form-label">Preferred Games</label>
            <div class="game-tags">
                <label class="game-tag-option">
                    <input type="checkbox" name="games" value="Valorant" checked />
                    <span class="tag">Valorant</span>
                </label>
                <label class="game-tag-option">
                    <input type="checkbox" name="games" value="Elden Ring" checked />
                    <span class="tag">Elden Ring</span>
                </label>
                <label class="game-tag-option">
                    <input type="checkbox" name="games" value="Apex Legends" />
                    <span class="tag">Apex Legends</span>
                </label>
                <label class="game-tag-option">
                    <input type="checkbox" name="games" value="Minecraft" />
                    <span class="tag">Minecraft</span>
                </label>
            </div>
        </div>
        
        <div class="form-group">
            <label class="form-label">Playstyle</label>
            <div class="playstyle-tags">
                <label class="playstyle-option">
                    <input type="radio" name="playstyle" value="Tryhard" checked />
                    <span class="tag">üî• Tryhard</span>
                </label>
                <label class="playstyle-option">
                    <input type="radio" name="playstyle" value="Chill" />
                    <span class="tag tag-green">üòé Chill</span>
                </label>
                <label class="playstyle-option">
                    <input type="radio" name="playstyle" value="Competitive" />
                    <span class="tag">üèÜ Competitive</span>
                </label>
                <label class="playstyle-option">
                    <input type="radio" name="playstyle" value="Casual" />
                    <span class="tag tag-blue">üéÆ Casual</span>
                </label>
            </div>
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i data-lucide="save"></i> Save Changes
            </button>
        </div>
    </form>
</div>

<style>
.profile-page {
    max-width: 720px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
}

/* Profile Header */
.profile-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--spacing-lg);
}

@@media (min-width: 600px) {
    .profile-header {
        flex-direction: row;
        text-align: left;
    }
}

.profile-avatar-container {
    position: relative;
}

.profile-avatar {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    border: 4px solid var(--color-primary-orange);
    box-shadow: var(--shadow-glow-orange);
}

.avatar-edit-btn {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 36px;
    height: 36px;
    padding: 0;
    border-radius: 50%;
}

.profile-info {
    flex: 1;
}

.profile-username {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: var(--spacing-xs);
}

.profile-tagline {
    color: var(--color-smoke-gray);
    margin-bottom: var(--spacing-md);
}

.profile-stats {
    display: flex;
    gap: var(--spacing-xl);
    flex-wrap: wrap;
}

.stat {
    display: flex;
    flex-direction: column;
}

.stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
}

.stat-label {
    font-size: 0.75rem;
    color: var(--color-smoke-gray);
}

.karma-stat .stat-value {
    color: var(--color-primary-orange);
}

.karma-stat i {
    width: 20px;
    height: 20px;
}

/* Profile Form */
.profile-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
}

.profile-form h2 {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: 1.25rem;
    color: var(--color-primary-orange);
    padding-bottom: var(--spacing-sm);
    border-bottom: 1px solid var(--glass-border);
}

.profile-form h2 i {
    width: 24px;
    height: 24px;
}

.profile-form h3 {
    font-size: 1rem;
    color: var(--color-ghost-white);
    margin-top: var(--spacing-md);
}

/* Game Tags */
.game-tags, .playstyle-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
}

.game-tag-option, .playstyle-option {
    cursor: pointer;
}

.game-tag-option input, .playstyle-option input {
    display: none;
}

.game-tag-option .tag, .playstyle-option .tag {
    transition: all var(--transition-fast);
    border: 2px solid transparent;
}

.game-tag-option input:checked + .tag,
.playstyle-option input:checked + .tag {
    border-color: var(--color-primary-orange);
    box-shadow: 0 0 12px rgba(255, 153, 0, 0.3);
}

.form-actions {
    display: flex;
    justify-content: flex-end;
    padding-top: var(--spacing-md);
    border-top: 1px solid var(--glass-border);
}
</style>

@section Scripts {
    <script>
        lucide.createIcons();
        
        document.getElementById('profileForm').addEventListener('submit', function(e) {
            e.preventDefault();
            // TODO: API call
            alert('Profile updated successfully!');
        });
    </script>
}
