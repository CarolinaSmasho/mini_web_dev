@{
    ViewData["Title"] = "Platform Settings";
}

<main class="flex-1 overflow-y-auto bg-slate-50 dark:bg-background-dark/50 p-8">
    <div class="max-w-4xl mx-auto">
        <!-- Page Header -->
        <div class="mb-10">
            <h2 class="text-4xl font-black tracking-tight mb-2 text-white font-display uppercase italic">PLATFORM_SETTINGS</h2>
            <p class="text-slate-500 dark:text-slate-400 font-medium uppercase tracking-widest text-xs">Manage your Hub identity, notification triggers, and security protocols.</p>
        </div>

        <div class="space-y-8 pb-20">
            <!-- Notifications Section -->
            <section class="space-y-4">
                <div class="flex items-center gap-2 mb-2">
                    <span class="material-symbols-outlined text-primary">notifications</span>
                    <h3 class="text-xl font-bold text-white uppercase tracking-tight">Notifications</h3>
                </div>
                <div class="bg-white dark:bg-card-dark rounded-xl border border-slate-200 dark:border-white/5 overflow-hidden divide-y divide-slate-100 dark:divide-white/5">
                    <!-- Setting Row 1 -->
                    <div class="p-6 flex items-center justify-between hover:bg-white/5 transition-colors">
                        <div class="space-y-1">
                            <p class="font-semibold text-white">Desktop Push Alerts</p>
                            <p class="text-sm text-slate-500 dark:text-slate-400">Receive real-time match found and party invite notifications.</p>
                        </div>
                        <label class="relative inline-flex items-center cursor-pointer">
                            <input checked="" class="sr-only peer" type="checkbox"/>
                            <div class="w-11 h-6 bg-white/10 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                        </label>
                    </div>
                    <!-- Setting Row 2 -->
                    <div class="p-6 flex items-center justify-between hover:bg-white/5 transition-colors">
                        <div class="space-y-1">
                            <p class="font-semibold text-white">Match Audio Cues</p>
                            <p class="text-sm text-slate-500 dark:text-slate-400">Play a tactical sound effect when a game lobby is ready.</p>
                        </div>
                        <label class="relative inline-flex items-center cursor-pointer">
                            <input checked="" class="sr-only peer" type="checkbox"/>
                            <div class="w-11 h-6 bg-white/10 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                        </label>
                    </div>
                </div>
            </section>

            <!-- Privacy Section -->
            <section class="space-y-4">
                <div class="flex items-center gap-2 mb-2">
                    <span class="material-symbols-outlined text-primary">visibility</span>
                    <h3 class="text-xl font-bold text-white uppercase tracking-tight">Privacy Control</h3>
                </div>
                <div class="bg-white dark:bg-card-dark rounded-xl border border-slate-200 dark:border-white/5 overflow-hidden divide-y divide-slate-100 dark:divide-white/5">
                    <div class="p-6 flex items-center justify-between">
                        <div class="space-y-1">
                            <p class="font-semibold text-white">Profile Visibility</p>
                            <p class="text-sm text-slate-500 dark:text-slate-400">Control who can see your stats, history, and current game.</p>
                        </div>
                        <div class="flex bg-black p-1 rounded-lg">
                            <button class="px-4 py-1.5 text-sm font-bold bg-primary text-black rounded shadow-sm">Public</button>
                            <button class="px-4 py-1.5 text-sm font-medium text-slate-500 hover:text-white transition-colors">Friends</button>
                            <button class="px-4 py-1.5 text-sm font-medium text-slate-500 hover:text-white transition-colors">Private</button>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Security Section -->
            <section class="space-y-4">
                <div class="flex items-center gap-2 mb-2">
                    <span class="material-symbols-outlined text-primary">security</span>
                    <h3 class="text-xl font-bold text-white uppercase tracking-tight">Security</h3>
                </div>
                <div class="bg-white dark:bg-card-dark rounded-xl border border-slate-200 dark:border-white/5 p-6">
                    <button class="w-full py-3 bg-red-500/10 hover:bg-red-500/20 border border-red-500/20 text-red-500 rounded font-bold text-sm uppercase tracking-widest transition-all">
                        Delete Account Protocol
                    </button>
                </div>
            </section>
        </div>
    </div>
</main>

<!-- Footer Actions Bar -->
<div class="fixed bottom-0 left-0 right-0 h-20 border-t border-white/5 bg-black/80 backdrop-blur-md flex items-center justify-center px-8 z-50">
    <div class="max-w-4xl w-full flex items-center justify-between">
        <div class="flex items-center gap-4 text-sm">
            <span class="flex items-center gap-2 text-slate-500 dark:text-slate-400">
                <span class="material-symbols-outlined text-xs">info</span>
                Ready to synchronize changes
            </span>
        </div>
        <div class="flex items-center gap-3">
            <button class="px-6 py-2.5 text-sm font-bold border border-white/10 text-white rounded hover:bg-white/5 transition-colors">
                Abey Default
            </button>
            <button onclick="alert('Settings synchronized with Hub')" class="px-8 py-2.5 text-sm font-bold bg-primary text-black rounded hover:shadow-[0_0_20px_rgba(242,150,13,0.4)] transition-all">
                Synchronize Settings
            </button>
        </div>
    </div>
</div>
