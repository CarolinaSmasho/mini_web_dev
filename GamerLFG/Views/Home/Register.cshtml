@{
    ViewData["Title"] = "Register - Gamer Hub";
}

@* Link your specific login CSS here *@
<link rel="stylesheet" href="~/css/register.css" />

<div class="login-container">
    <div class = "login-box">
        <h1 style="color:white">
            Register
        </h1>
       <form id="Register_form" asp-action="Register" method="post">
            <div class="form-group">
                <input type="text" id = "name" placeholder="Name" required />
            </div>

            <div class="form-group">
                <input type="email" id = "email" name = "Email" placeholder="Email" required />
            </div>

            <div class="form-group">
                <input type="text" id="username" placeholder="Username" required />
            </div>

            <div class="form-group">
                <input type="password" id = "password" name = "Password" placeholder="Password" required />
            </div>

            <div class="form-group">
                <input type="password" id = "comfirm_password" placeholder="Confirm Password" required />
            </div>


            <button type="submit" class="login-button" style="width: 100%; border-radius: 50px; padding: 12px;">Register</button>
        </form>

        <p style="color: white; margin: 25px;font-size:14px">
            Already have an account? <a asp-controller="Home" asp-action="Login" style="color: white; font-weight: bold; text-decoration: none;">Login</a>
        </p>
    </div>

</div>

@section Scripts{
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const form = document.getElementById('Register_form');
            
            
            if (form) {
                form.addEventListener('submit', function (e) {
                    const password = document.getElementById('password').value;
                    const confirmPassword = document.getElementById('comfirm_password').value;

                    if (password !== confirmPassword) {
                        e.preventDefault(); // Stop submission
                        alert("Passwords do not match! Please try again.");
                        
                        const confirmField = document.getElementById('comfirm_password');
                        confirmField.value = "";
                        confirmField.focus();
                    }
                });
            }
        });
    </script>
}